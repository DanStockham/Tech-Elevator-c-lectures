<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Fly By Night Bank - @ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/stylesheet.css" />
</head>
<body>
    <header>
        <img src="~/Content/img/flybynightlogo.png" alt="Fly By Night Bank" />
        <p>At Fly By Night, we treat your money as if it's our own.</p>
    </header>
    <nav>
        <ul>
            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li><a href="#">Why Fly By Night</a></li>
            <li>@Html.ActionLink("Compound Interest Calculator", "CompoundInterest", "Calculators")</li>
            <li>@Html.ActionLink("Credit Card Payoff Calculator", "TimeToPayOff", "Calculators")</li>
            <li>@Html.ActionLink("Appreciation Survey", "Index", "Survey")</li>
            <li>@Html.ActionLink("Apply for a Loan", "Index", "LoanApplication")</li>
        </ul>
    </nav>

    <section id="main">

        @RenderBody()

    </section>
    <footer>
        Fly By Night Bank | Varying Locations | sales@flybynightbank.com <br /> <br />
       
        Controller Session: <strong> @Session["sessionName1"] </strong> |
        Controller ViewBag: <strong> @ViewBag.viewbagName1 </strong> <br />
        Controller ViewData: <strong> @ViewData["viewdataName1"] </strong> |
        Controller TempData: <strong> @TempData["tempdataName1"] </strong> <br /> <br />

        View Session: <strong> @Session["sessionName2"] </strong> |
        View ViewBag: <strong> @ViewBag.viewbagName2 </strong> <br />
        View ViewData: <strong> @ViewData["viewdataName2"] </strong> |
        View TempData: <strong> @TempData["tempdataName2"] </strong>




    </footer>
</body>
</html>
