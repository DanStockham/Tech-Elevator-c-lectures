
@{
    ViewBag.Title = "US Presidents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@helper PresidentialElement(string name, string party, int beginYear, int? endYear, string imagePath, string classes)
{
    <div id="@name.ToLower().Replace(" ", "-")" class="@party @classes">
        <img src="@Url.Content("~/Content/images/Presidents/" + imagePath)" alt="@name" />
        <h3>@name</h3>
        @if (endYear.HasValue)
        {
            <p>(@beginYear.ToString() - @endYear.ToString())</p>
        }
        else
        {
            <p>(@beginYear.ToString() - )</p>
        }
    </div>
}


