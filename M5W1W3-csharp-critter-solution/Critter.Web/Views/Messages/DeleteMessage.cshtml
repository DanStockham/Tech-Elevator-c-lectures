@model Critter.Web.Models.Data.Message

@{
    ViewBag.Title = "DeleteMessage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Please confirm you want to delete this message</h2>
<ol class="message-list">

    <li class="message">        
        <span class="message-text">
            @Model.MessageText
        </span>
        <time class="timestamp">Sent @Model.CreatedDate.ToString("g")</time>
    </li>
</ol>

<div class="row">
    <div class="col-md-5">
        @using (Html.BeginForm("DeleteMessage", "Messages", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.MessageId)
            <button type="submit" class="btn btn-default">Delete</button>
        }
    </div>
    <div class="col-md-9"></div>
</div>
